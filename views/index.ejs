<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Quadro de Serviços</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="/style.css">
</head>
<body class="bg-dark">
    <div class="container-fluid py-4">
        <a href="https://loja-mega-xerox.velmc0.easypanel.host/index.html">Voltar</a>
        <h1 class="text-center mb-4 text-white">Quadro de Serviços</h1>
        <div class="row">
            <div class="col-md-4">
                <div class="card shadow-sm p-4 h-100">
                    <h5 class="card-title text-center">Adicionar Novo Serviço</h5>
                    <form id="form-adicionar" action="/adicionar" method="POST">
                        <div class="mb-3">
                            <label for="servico" class="form-label">Serviço</label>
                            <input type="text" class="form-control" id="servico" name="servico" required>
                        </div>
                        <div class="mb-3">
                            <label for="descricao" class="form-label">Descrição (Opcional)</label>
                            <textarea class="form-control" id="descricao" name="descricao" rows="3"></textarea>
                        </div>
                        <div class="row g-3 mb-3">
                            <div class="col-md-6">
                                <label for="prazo" class="form-label">Prazo</label>
                                <input type="date" class="form-control" id="prazo" name="prazo" required>
                            </div>
                            <div class="col-md-6">
                                <label for="urgencia" class="form-label">Urgência</label>
                                <select class="form-select" id="urgencia" name="urgencia" required>
                                    <option value="1">Baixa</option>
                                    <option value="2">Média</option>
                                    <option value="3">Alta</option>
                                </select>
                            </div>
                        </div>
                        <div class="d-grid">
                            <button type="submit" class="btn btn-primary">Adicionar</button>
                        </div>
                    </form>
                </div>
            </div>

            <div class="col-md-8">
                <div class="card shadow-sm p-4 h-100">
                    <div class="d-flex justify-content-between align-items-center mb-3">
                        <h5 id="titulo-painel" class="card-title text-white mb-0">Tarefas Pendentes</h5>
                        <button id="toggle-view-btn" class="btn btn-secondary">Mostrar Concluídas</button>
                    </div>

                    <div class="row g-3" id="painel-tarefas-pendentes">
                        <% tarefas.forEach(tarefa => { %>
                            <div class="col-6 col-sm-4 col-md-3">
                                <div class="card post-it urgencia-<%= tarefa.urgencia %>" data-bs-toggle="modal" data-bs-target="#tarefaModal" data-id="<%= tarefa.id %>" data-servico="<%= tarefa.servico %>" data-prazo="<%= new Date(tarefa.prazo).toLocaleDateString('pt-BR') %>" data-urgencia="<%= tarefa.urgencia %>" data-descricao="<%= tarefa.descricao %>">
                                    <div class="card-body">
                                        <h6 class="card-title fw-bold"><%= tarefa.servico %></h6>
                                        <p class="card-text text-muted"><%= tarefa.descricao %></p>
                                    </div>
                                </div>
                            </div>
                        <% }) %>
                    </div>
                    
                    <div class="row g-3 hidden" id="painel-tarefas-concluidas">
                        <% concluidas.forEach(tarefa => { %>
                            <div class="col-6 col-sm-4 col-md-3">
                                <div class="card post-it urgencia-<%= tarefa.urgencia %>" data-bs-toggle="modal" data-bs-target="#tarefaModal" data-id="<%= tarefa.id %>" data-servico="<%= tarefa.servico %>" data-prazo="<%= new Date(tarefa.prazo).toLocaleDateString('pt-BR') %>" data-urgencia="<%= tarefa.urgencia %>" data-descricao="<%= tarefa.descricao %>">
                                    <div class="card-body">
                                        <h6 class="card-title fw-bold"><%= tarefa.servico %></h6>
                                        <p class="card-text text-muted"><%= tarefa.descricao %></p>
                                    </div>
                                </div>
                            </div>
                        <% }) %>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="modal fade" id="tarefaModal" tabindex="-1" aria-labelledby="tarefaModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="tarefaModalLabel"></h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <p><strong>Prazo:</strong> <span id="modal-prazo"></span></p>
                    <p><strong>Urgência:</strong> <span id="modal-urgencia"></span></p>
                    <p><strong>Descrição:</strong></p>
                    <p id="modal-descricao"></p>
                </div>
                <div class="modal-footer">
                    <form id="form-concluir" method="POST" class="d-inline">
                        <button type="submit" class="btn btn-success">Concluir</button>
                    </form>
                    <form id="form-deletar" method="POST" class="d-inline">
                        <button type="submit" class="btn btn-outline-danger">Excluir</button>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <script src="/socket.io/socket.io.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        const socket = io();
        const painelPendentes = document.getElementById('painel-tarefas-pendentes');
        const painelConcluidas = document.getElementById('painel-tarefas-concluidas');
        const toggleBtn = document.getElementById('toggle-view-btn');
        const tituloPainel = document.getElementById('titulo-painel');
        const tarefaModal = document.getElementById('tarefaModal');

        let isViewingConcluidas = false;

        toggleBtn.addEventListener('click', () => {
            isViewingConcluidas = !isViewingConcluidas;
            if (isViewingConcluidas) {
                painelPendentes.classList.add('hidden');
                painelConcluidas.classList.remove('hidden');
                toggleBtn.textContent = 'Mostrar Pendentes';
                tituloPainel.textContent = 'Tarefas Concluídas';
            } else {
                painelPendentes.classList.remove('hidden');
                painelConcluidas.classList.add('hidden');
                toggleBtn.textContent = 'Mostrar Concluídas';
                tituloPainel.textContent = 'Tarefas Pendentes';
            }
        });

        tarefaModal.addEventListener('show.bs.modal', function (event) {
            const button = event.relatedTarget;
            const id = button.getAttribute('data-id');
            const servico = button.getAttribute('data-servico');
            const prazo = button.getAttribute('data-prazo');
            const descricao = button.getAttribute('data-descricao');
            const urgencia = button.getAttribute('data-urgencia');
            
            const modalTitle = tarefaModal.querySelector('.modal-title');
            const modalPrazo = tarefaModal.querySelector('#modal-prazo');
            const modalDescricao = tarefaModal.querySelector('#modal-descricao');
            const modalUrgencia = tarefaModal.querySelector('#modal-urgencia');
            const formConcluir = tarefaModal.querySelector('#form-concluir');
            const formDeletar = tarefaModal.querySelector('#form-deletar');
            
            let urgenciaTexto = '';
            if (urgencia === '1') urgenciaTexto = 'Baixa';
            else if (urgencia === '2') urgenciaTexto = 'Média';
            else if (urgencia === '3') urgenciaTexto = 'Alta';

            modalTitle.textContent = servico;
            modalPrazo.textContent = prazo;
            modalUrgencia.textContent = urgenciaTexto;
            modalDescricao.textContent = descricao;
            formConcluir.action = `/concluir/${id}`;
            formDeletar.action = `/deletar/${id}`;
        });

        const renderTarefa = (tarefa) => {
            const col = document.createElement('div');
            col.className = 'col-6 col-sm-4 col-md-3';
            col.innerHTML = `
                <div class="card post-it urgencia-${tarefa.urgencia}" data-bs-toggle="modal" data-bs-target="#tarefaModal" 
                    data-id="${tarefa.id}" 
                    data-servico="${tarefa.servico}" 
                    data-prazo="${new Date(tarefa.prazo).toLocaleDateString('pt-BR')}" 
                    data-urgencia="${tarefa.urgencia}" 
                    data-descricao="${tarefa.descricao || ''}">
                    <div class="card-body">
                        <h6 class="card-title fw-bold">${tarefa.servico}</h6>
                        <p class="card-text text-muted">${tarefa.descricao || ''}</p>
                    </div>
                </div>
            `;
            return col;
        };

        socket.on('atualizar_pendentes', (tarefas) => {
            painelPendentes.innerHTML = '';
            tarefas.forEach(tarefa => painelPendentes.appendChild(renderTarefa(tarefa)));
        });

        socket.on('atualizar_concluidas', (concluidas) => {
            painelConcluidas.innerHTML = '';
            concluidas.forEach(concluida => painelConcluidas.appendChild(renderTarefa(concluida)));
        });
    </script>
</body>

</html>
